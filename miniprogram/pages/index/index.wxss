/**index.wxss**/

page {
  background: linear-gradient(180deg, #fff7f4 0%, #ffe9e3 50%, #fff5ef 100%);
  min-height: 100vh;
  box-sizing: border-box;
  overflow: hidden;
}

.container {
  font-family: PingFang SC;
  color: #3a2a26;
  min-height: calc(100vh - 134rpx);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 0 48rpx;
  box-sizing: border-box;
  gap: 32rpx;
}

.title {
  font-family: PingFang SC;
  font-weight: 600;
  color: #b22222;
  font-size: 48rpx;
  letter-spacing: 2rpx;
}

.top_tip {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #c06b50;
  margin-bottom: 12rpx;
}

.avatar_card {
  margin-top: 7vh;
  margin-bottom: 7vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 28rpx;
}

.avatar_preview {
  width: 260rpx;
  height: 260rpx;
  border-radius: 24rpx;
  overflow: hidden;
  background: linear-gradient(135deg, #fff 0%, #ffe1d6 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  border: 6rpx solid #fff;
  box-shadow: 0 20rpx 50rpx rgba(178, 34, 34, 0.12);
}

.avatar_img {
  width: 100%;
  height: 100%;
}

.avatar_actions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  width: 100%;
  align-items: center;
  margin-top: 4vh;
}

.avatar_btn {
  background: linear-gradient(90deg, #ff5a4f, #e83b3b);
  color: #fff;
  border: none;
  border-radius: 999rpx;
  padding: 26rpx 48rpx;
  font-size: 30rpx;
  line-height: 1;
  min-width: 520rpx;
  box-shadow: 0 12rpx 30rpx rgba(232, 59, 59, 0.18);
}

.avatar_btn:active {
  opacity: 0.9;
}

.avatar_btn--primary {
  background: linear-gradient(120deg, #ff5a4f 0%, #e83b3b 50%, #c7273a 100%);
  color: #fff;
}

.avatar_btn--ghost {
  background: #fff7f4;
  color: #c7273a;
  border: 2rpx solid #f5b7a6;
  box-shadow: 0 10rpx 24rpx rgba(199, 39, 58, 0.08);
}

.loading_mask {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.45);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  color: #fff;
}

.loading_spinner {
  width: 48rpx;
  height: 48rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: #fff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading_text {
  font-size: 24rpx;
}

.loading_subtext {
  margin-top: 8rpx;
  text-align: center;
  font-size: 22rpx;
  color: #9a3b2c;
  animation: pulseColor 1.2s ease-in-out infinite;
}

@keyframes pulseColor {
  0% {
    color: #c25745;
  }
  50% {
    color: #8f2c2c;
  }
  100% {
    color: #c25745;
  }
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.avatar_tip {
  color: #999;
  font-size: 24rpx;
}
